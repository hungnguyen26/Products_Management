extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main

    .container.my-3     
        .row 
            .col-12     
                +box-head("Chat")

        .row    
            .col-12 
                .chat(my-id=user.id)
                    .inner-body
                        each chat in chats
                            div(class=(chat.inforUser.id == user.id ? "inner-outcoming":"inner-incoming"))
                                if(chat.inforUser.id != user.id)
                                    .inner-name #{chat.inforUser.fullName}
                                .inner-content
                                    | #{chat.content}  
                    .inner-foot
                        form(
                            action="" 
                            class="inner-form"
                        ) 
                            input(type="text" placeholder="Nhập nội dung..." name="content")
                            button 
                                i.fa-solid.fa-paper-plane