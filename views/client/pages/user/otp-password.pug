extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(3000)
    
    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Nhập mã OTP xác thực
                form(
                    action="/user/password/otp"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="text"
                            class="form-control"
                            id="email"
                            name="email"
                            value= email
                            required
                            readonly
                        )
                    div(class="form-group")
                        label(for="otp") Mã OTP
                        input(
                            type="text"
                            class="form-control"
                            id="otp"
                            name="otp"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block mt-2"
                        ) Xác nhận

