extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Thêm mới nhóm quyền 

    form(
        action=`${prefixadmin}/roles/create`
        method="post"
    ) 
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            ) 
        div(class="form-group")
            label(for="desc") Mô tả
            input(
                type="text"
                class="form-control"
                id="desc"
                name="description"
            ) 
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới